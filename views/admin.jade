doctype html
html(ng-app="RegistrationApp")
  head
    title Administrator
    base(href="//#{base}/")
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")

    // STYLES
    link(rel="stylesheet", href="/lib/angular-material/angular-material.min.css")
    link(rel="stylesheet", href="/styles/dependencies/foundation/foundation.css")
    link(rel="stylesheet", href="/styles/dependencies/foundation/normalize.css")
    link(rel="stylesheet", href="/styles/admin/app.css")
    // STYLES END

  body
    // TEMPLATES
    script(type="text/javascript", src="/templates/jst_admin.js")
    // TEMPLATES END
    div(layout="column", style="height:100%;", ng-controller='NavigatorCtrl')
      section(layout="row" flex)
        md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left", md-is-locked-open="$mdMedia('gt-md')")
          md-toolbar.md-theme-indigo
            h1.md-toolbar-tools Menu
          md-content.md-padding
            .nav-btn(ng-class="{active:url('/employee')}")
              a(href='/employee')
                .icon-user
            .nav-btn(ng-class="{active:url('/role')}")
              a(href='/role')
                .icon-suitcase
            .nav-btn(ng-class="{active:url('/settings')}")
              a(href='/settings')
                .icon-cog
            #off.icon-power(ng-click='logout()')
        div(layout="column",tabindex="-1", role="main" flex)
          md-content.md-padding(flex)
            div(layout="column", layout-fill, layout-align="top center")
              ng-view
    // SCRIPTS
    script(src="/lib/angular/angular.js")
    script(src="/lib/angular/angular-animate.js")
    script(src="/lib/angular/angular-resource.js")
    script(src="/lib/angular/angular-route.js")
    script(src="/lib/lodash/lodash.js")
    script(src="/lib/angular-material/angular-material.min.js")
    script(src="/lib/angular-material/angular-material.js")
    script(src="/lib/angular-aria/angular-aria.min.js")
    script(src="/lib/angular-aria/angular-aria.js")
    script(src="/lib/angular-messages/angular-messages.min.js")
    script(src="/lib/angular-messages/angular-messages.js")
    script(src="/js/admin/app.js")
    script(src="/js/admin/employee/EmployeeCtrl.js")
    script(src="/js/admin/role/RoleCtrl.js")
    script(src="/js/admin/setting/SettingCtrl.js")
    script(src="/js/common/NavigatorCtrl.js")
    script(src="/js/common/directives/modalDirective/directive.js")
    // SCRIPTS END

